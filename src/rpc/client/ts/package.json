{
  "name": "omega-edit",
  "version": "0.9.55",
  "description": "OmegaEdit gRPC Client TypeScript Types",
  "publisher": "ctc-oss",
  "repository": {
    "url": "https://github.com/ctc-oss/omega-edit",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/ctc-oss/omega-edit/issues"
  },
  "author": "Shane Dell, Davin Shearer, John Wass",
  "license": "Apache-2.0",
  "scripts": {
    "build": "webpack --mode=production",
    "copy-server-script": "run-script-os",
    "copy-server-script:default": "cp omega-edit-grpc-server-$npm_package_version/omega-edit-grpc-server.js .",
    "copy-server-script:windows": "copy omega-edit-grpc-server-$npm_package_version/omega-edit-grpc-server.js .",
    "compile-src": "run-script-os",
    "compile-src:default": "./compile-proto.sh",
    "compile-src:windows": "./compile-proto.bat",
    "docgen": "typedoc",
    "prepackage": "yarn compile-src && yarn build && yarn copy-server-script",
    "package": "yarn --cwd out install && yarn --cwd out cache clean && yarn --cwd out pack -f omega-edit-v$npm_package_version.tgz",
    "install-omega-edit": "yarn add file://$INIT_CWD/omega-edit-v$npm_package_version.tgz",
    "pretest": "yarn package && yarn install-omega-edit",
    "test": "mocha --exit --timeout 50000 --slow 10000 --require ts-node/register --require tests/fixtures.ts --exclude ./tests/specs/server.spec.ts ./tests/specs/*.spec.ts && mocha --exit --timeout 10000 --slow 1000 --require ts-node/register ./tests/specs/server.spec.ts || (yarn remove omega-edit && exit 1)",
    "lint": "yarn prettier --check webpack.config.js src tests",
    "posttest": "yarn remove omega-edit",
    "lint:fix": "yarn prettier --write webpack.config.js src tests"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "copy-webpack-plugin": "^11.0.0",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "mocha": "^10.0.0",
    "prettier": "^2.8.4",
    "run-script-os": "^1.1.6",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.23.16",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.12",
    "@types/google-protobuf": "^3.15.5",
    "@types/node": "^18.8.4",
    "google-protobuf": "^3.21.2",
    "pino": "^8.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "wait-port": "^1.0.4"
  }
}

{
  "name": "@omega-edit/core",
  "version": "0.9.70",
  "private": "true",
  "description": "OmegaEdit Client and Server",
  "publisher": "ctc-oss",
  "repository": {
    "url": "https://github.com/ctc-oss/omega-edit",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/ctc-oss/omega-edit/issues"
  },
  "author": "Shane Dell, Davin Shearer, John Wass",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "prettier --check package.json && yarn workspaces run lint",
    "lint:fix": "prettier --write package.json && yarn workspaces run lint:fix",
    "package": "yarn workspace @omega-edit/server package && yarn workspace @omega-edit/client package",
    "package-no-sbt": "yarn workspace @omega-edit/server package-no-sbt && yarn workspace @omega-edit/client package"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "unzip-stream": "^0.3.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    }
  }
}
